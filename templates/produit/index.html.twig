{% extends 'layout.html.twig' %} 

{% block title %} Nos sélections{% endblock %}

{% block content %}
<div class="row mt-5 justify-content-center text-center">
  <h1 class="text-center text-info" style="margin: 2%">Nos sélections </h1>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="card" style="width: 18rem;">
          <div class="card-header"><a class="text-decoration-none" href="{{ path("app_produit")}}" class="text-body">Nos sélections</a>
          </div>
                <ul class="list-group list-group-flush">
                {% for category in categories %}
                <li class="list-group-item btn btn-dark text-center"><a class="text-decoration-none" href="{{ path("produit_categorie", {id:category.id})}}"  >
                  {{category.nom}}
                </a></li> 
              {% endfor %} 
                </ul>
      </div>
  </div>
      {% for produit in produits %}
      <div class="col col-md-3 mt-1">
        <div class="card" style="width: 100%">
          <div class="card-body">
            <h5 class="card-title">{{ produit.titre }}</h5>
              <img width="60%" src="{{ asset('uploads/' ~ produit.photo) }}" alt="{{produit.titre}}">
            <h6>Couleur : {{ produit.couleur}}</h6>
            <h6>Taille : {{ produit.taille}} - Stock : {{ produit.stock}}</h6>

            <h6 class='text-danger'>Prix : {{ produit.prix}}€</h6>
            <p class="card-text">{{ produit.description | slice(0,50)}} ... <a href="{{ path("produit_show", {id:produit.id})}}"><i class="fas fa-circle-info text-dark"></i>
              </a></p>
            <a href=" {{path("panier_add", {id: produit.id})}}  "><i class="fas fa-basket-shopping text-danger"></i></a>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>
{% endblock %}