{% extends 'layout.html.twig' %}

{% block title %}gestion user{% endblock %}

{% block content %}
<table class="table text-center ">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Id</th>
        <th scope="col">email</th>
        <th scope="col">role</th>
        <th scope="col">password</th>
        <th scope="col">create time stamp</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
        {% for user in user %}       
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.role | slice(0, 50) }}</td>
                <td>{{ user.password }}</td>
                <td>{{ produit.createdtimestamp | date("d/m/Y \à H\\hi") }}</td>
                <td>
                    <a href="{{ path('admin_details_user', {id: user.id} ) }}">show</a> 
                    <a href="{{ path('admin_update_user', {id: user.id}) }}" >update</a>
                    <a href="{{ path('admin_delete_user', {id: user.id}) }}" onclick= "return confirm('êtes vous sûr de vouloir supprimer le user ?')">delete</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
  </table>
{% endblock %}
